<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLight">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:background="@color/colorLight"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            android:visibility="visible"
            android:src="@mipmap/ic_visilabs"
            android:contentDescription="@string/visilabs_logo" />

        <TextView
            android:layout_width="match_parent"
            android:text="@string/welcome_to_visilabs_demo"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:orientation="horizontal"
            android:paddingLeft="4.0dip"
            android:paddingTop="5.0dip"
            android:paddingRight="4.0dip"
            android:paddingBottom="1.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_go_to_login"
                android:layout_margin="2.0dp"
                android:layout_width="0.0dip"
                android:layout_weight="1.0"
                android:layout_height="fill_parent"
                android:background="@color/colorButton"
                android:text="@string/go_to_login_page"
                android:textColor="@color/colorLight" />

            <Button
                android:id="@+id/btn_go_to_inapp"
                android:layout_margin="2.0dp"
                android:layout_width="0.0dip"
                android:layout_weight="1.0"
                android:layout_height="fill_parent"
                android:background="@color/colorButton"
                android:text="@string/go_to_inapp_page"
                android:textColor="@color/colorLight" />

            <Button
                android:id="@+id/btn_go_to_story"
                android:layout_margin="2.0dp"
                android:layout_width="0.0dip"
                android:layout_weight="1.0"
                android:layout_height="fill_parent"
                android:background="@color/colorButton"
                android:text="@string/go_to_story_page"
                android:textColor="@color/colorLight" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:background="@android:drawable/bottom_bar"
            android:paddingLeft="4.0dip"
            android:paddingTop="5.0dip"
            android:paddingRight="4.0dip"
            android:paddingBottom="1.0dip"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/customEvent1"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:text="@string/image_text_button"
                android:layout_weight="1.0" />

            <Button
                android:id="@+id/customEvent2"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:text="@string/custom_event_2"
                android:layout_weight="1.0" />

            <Button
                android:id="@+id/customEvent3"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:text="@string/custom_event_3"
                android:layout_weight="1.0" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:background="@android:drawable/bottom_bar"
            android:paddingLeft="4.0dip"
            android:paddingTop="5.0dip"
            android:paddingRight="4.0dip"
            android:paddingBottom="1.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/inApp1"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:text="@string/image_text_button"
                android:layout_weight="1.0" />

            <Button
                android:id="@+id/inApp2"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:text="@string/mini"
                android:layout_weight="1.0" />

            <Button
                android:id="@+id/inApp3"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:text="@string/alert"
                android:layout_weight="1.0" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>