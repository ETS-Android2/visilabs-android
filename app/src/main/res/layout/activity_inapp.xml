<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLight"
    android:gravity="center"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_show_alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@color/colorButton"
        android:padding="10dp"
        android:text="@string/show_alert"
        android:textColor="@color/colorLight" />


    <Button
        android:id="@+id/btn_show_action_sheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@color/colorButton"
        android:padding="10dp"
        android:text="@string/show_action_sheet"
        android:textColor="@color/colorLight" />

    <Button
        android:id="@+id/btn_show_spin_to_win"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@color/colorButton"
        android:padding="10dp"
        android:text="@string/show_spin_to_win"
        android:textColor="@color/colorLight" />

</LinearLayout>